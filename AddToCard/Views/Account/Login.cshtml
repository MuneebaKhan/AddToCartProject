@model AddToCard.Models.tbl_User
@{
    Layout = null;
}

<div class="modal-dialog">
    <div class="modal-content">

        <div class="modal-header" style="padding:10px 70px;">

            <h1> Sign in</h1>
            <button type="button" class="close" data-dismiss="modal">&times;</button>



        </div>
        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
        {
            <div class="modal-body" style="padding:20px 40px;">
                <form role="form">
                    <div class="form-group" id="form1">
                        <span><i class="fas fa-envelope"></i></span>
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter your name" } })
                    </div>

                    <div class="form-group" id="form2">
                        <span><i class="fas fa-lock"></i></span>
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter your name" } })
                    </div><br>
                    <p style="float:right; font-size:12px"> <a href="#" style="color:black">Forgot Password?</a></p>
                    <br><br>
                    <button type="submit" class="btn btn-dark btn-block" id="btn-login">
                        <span>
                            <i class="fas fa-sign-in-alt"></i>
                        </span> Login
                    </button>
                </form>
            </div>
        }
        <p style="text-align:center">or sign in with:</p>



        <div class="modal-footer">
            <div class="text-center">
                <br>
                <button type="button" class="btn btn-white">
                    <i class="fab fa-facebook-f text-center"></i>
                </button>
                <button type="button" class="btn btn-white"><i class="fab fa-twitter"></i></button>
                <button type="button" class="btn btn-white"><i class="fab fa-google-plus-g"></i></button>
            </div>
            <br>
            <p style="color:#999; font-size:12px">Not a member? <a href="#" id="Change_Modal" style="color: black;font-weight: bold;">Sign Up</a></p>
        </div>
    </div>
</div>
